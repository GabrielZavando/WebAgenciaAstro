---
import { Image } from 'astro:assets';
import banner from '../assets/img/banner-web.jpg';
import "../styles/components/banner.scss";

const name = "Gabriel Zavando";
const charge = "Full Stack Developer";
const subtitle = "Tu negocio tiene todo para crecer. La digitalización es el siguiente paso, y yo puedo ayudarte a darlo con soluciones pensadas para escalar, adaptarse y transformar tu presente en futuro.";
---

<section class="banner">
    <div class="banner__background">
        <Image 
            src={banner} 
            alt="Gabriel Zavando - Desarrollador Full Stack"
            width={1920}
            height={1080}
            class="banner__image"
        />
    </div>
    
    <div class="banner__overlay"></div>
    
    <div class="banner__container">
        <div class="banner__content">
            <h1 class="banner__title">
                <span class="banner__name">{name}</span>
                <span class="banner__charge">{charge}</span>
            </h1>
            <p class="banner__subtitle">
                {subtitle}
            </p>
            <div class="banner__actions">
                <a href="#contact" class="banner__cta">
                    Hablemos de tu proyecto
                    <span class="banner__cta-arrow">→</span>
                </a>
                <a href="#services" class="banner__cta banner__cta--secondary">
                    Ver Servicios
                </a>
            </div>
        </div>
    </div>
</section>
