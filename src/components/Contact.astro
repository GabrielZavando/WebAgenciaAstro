<section class="contact" id="contact">
    <div class="contact__container">
        <h2 class="contact__title">Contacto</h2>
        <p class="contact__subtitle">¿Tienes un proyecto en mente? Cuéntame sobre él</p>

        <form class="contact-form" id="contactForm" action="mailto:contacto@gabrielzavando.cl" method="post" enctype="text/plain">
            <div class="form-group">
                <label for="name" class="form-label">Nombre completo *</label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    class="form-input"
                    required
                    placeholder="¿Cómo te llamas?"
                />
            </div>

            <div class="form-group">
                <label for="email" class="form-label">Correo electrónico *</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="form-input"
                    required
                    placeholder="tu@correo.com"
                />
            </div>

            <div class="form-group">
                <label for="phone" class="form-label">Teléfono (opcional)</label>
                <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    class="form-input"
                    placeholder="+56 9 XXXX XXXX"
                />
            </div>

            <div class="form-group">
                <label for="message" class="form-label">Mensaje *</label>
                <textarea 
                    id="message" 
                    name="message" 
                    class="form-input form-textarea"
                    required
                    placeholder="Cuéntame sobre tu proyecto..."
                ></textarea>
                <div class="character-counter">
                    <span id="currentCount">0</span>
                    <span>/</span>
                    <span>1500 caracteres</span>
                </div>
            </div>

            <button type="submit" class="form-submit">
                Enviar mensaje
            </button>
        </form>
    </div>
</section>

<style lang="scss">
    // Variables
    $color-primary: #FF0080;
    $color-secondary: #A600FF;
    $color-dark: #1D0033;
    $color-neutral: #2F2F2F;
    $color-white: #FFFFFF;
    $color-accent: #00FFE0;
    $color-error: #FF3366;
    $color-background: #fafafa;

    .contact {
        padding: 4rem 1rem;
        background-color: $color-background;

        &__container {
            max-width: 800px;
            margin: 0 auto;
        }

        &__title {
            font-family: 'Montserrat', sans-serif;
            font-size: 2.25rem;
            font-weight: 700;
            text-align: center;
            color: $color-dark;
            margin-bottom: 1rem;
        }

        &__subtitle {
            font-family: 'Raleway', sans-serif;
            font-size: 1.125rem;
            text-align: center;
            color: $color-neutral;
            margin-bottom: 3rem;
        }
    }

    .contact-form {
        background: $color-white;
        padding: 2rem;
        border-radius: 1rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        display: block;
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
        color: $color-dark;
        margin-bottom: 0.5rem;
    }

    .form-input {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid #e2e8f0;
        border-radius: 0.5rem;
        font-family: 'Raleway', sans-serif;
        font-size: 1rem;
        transition: all 0.3s ease;

        &:focus {
            outline: none;
            border-color: $color-primary;
            box-shadow: 0 0 0 3px rgba($color-primary, 0.1);
        }

        &::placeholder {
            color: #a0aec0;
        }

        &.error {
            border-color: $color-error;
        }
    }

    .form-textarea {
        min-height: 150px;
        resize: vertical;
    }

    .character-counter {
        margin-top: 0.5rem;
        font-family: 'Raleway', sans-serif;
        font-size: 0.875rem;
        color: $color-neutral;
        text-align: right;

        &.error {
            color: $color-error;
        }
    }

    .form-submit {
        width: 100%;
        padding: 1rem;
        border: none;
        border-radius: 0.5rem;
        background: $color-primary;
        color: $color-white;
        font-family: 'Montserrat', sans-serif;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;

        &:hover {
            background: $color-secondary;
        }

        &:active {
            background: $color-dark;
        }
    }
</style>
