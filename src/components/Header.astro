---
import { Image } from "astro:assets";
import Logo from "../assets/img/logo-medium.png";
---

<header class="header">
    <div class="header__container">
        <h1 class="header__logo">
            <a href="/">
                <Image
                    src={Logo}
                    alt="Logo de la agencia"
                    width="150"
                    height="150"
                    class="logo"
                    loading="lazy"
                />
            </a>
        </h1>
        
        <button class="nav-toggle" aria-label="Abrir menú">
            <span class="hamburger"></span>
        </button>

        <nav class="nav">
            <ul class="nav__list">
                <li><a href="/" class="nav__link">Inicio</a></li>
                <li><a href="#" class="nav__link">Servicios</a></li>
                <li><a href="#" class="nav__link">Sobre mi</a></li>
                <li><a href="#" class="nav__link">Metodología</a></li>
                <li><a href="#" class="nav__link">Planes</a></li>
                <li><a href="#" class="nav__link">Contacto</a></li>
            </ul>
        </nav>
    </div>
</header>

<style>
    /* Mobile first - Estilos base */
    .header {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        width: 100%;
        background: transparent;
        z-index: 999;
        height: 80px;
        transition: background-color 0.3s ease-in-out;
        will-change: background-color;
        backface-visibility: hidden; /* Ayuda a prevenir saltos en algunos navegadores */
        transform: translateZ(0); /* Fuerza la aceleración por hardware */
    }

    .header.scrolled {
        background: rgba(255, 255, 255, 0.95);
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .header__container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 1rem;
        height: 100%;
    }

    .header__logo {
        margin: 0;
        z-index: 1000;
        position: relative;
        height: 100%;
        display: flex;
        align-items: center;
    }

    .logo {
        width: auto;
        height: 60px; /* Altura fija proporcional al header */
        display: block;
    }

    /* Menú hamburguesa */
    .nav-toggle {
        display: block;
        border: none;
        background: none;
        cursor: pointer;
        padding: 0.5rem;
        z-index: 1000;
    }

    .hamburger,
    .hamburger::before,
    .hamburger::after {
        display: block;
        width: 24px;
        height: 2px;
        background: #333;
        transition: all 0.3s ease-in-out;
        position: relative;
    }

    .hamburger::before,
    .hamburger::after {
        content: '';
        position: absolute;
        left: 0;
    }

    .hamburger::before { top: -8px; }
    .hamburger::after { top: 8px; }

    /* Animación del menú hamburguesa */
    .hamburger.active {
        background: transparent;
    }

    .hamburger.active::before {
        top: 0;
        transform: rotate(45deg);
    }

    .hamburger.active::after {
        top: 0;
        transform: rotate(-45deg);
    }

    /* Navegación móvil */
    .nav {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(255, 255, 255, 0.98);
        transform: translateY(-100%);
        transition: transform 0.3s ease-in-out;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 999;
    }

    .nav.active {
        transform: translateY(0);
    }

    .nav__list {
        list-style: none;
        padding: 0;
        margin: 0;
        text-align: center;
    }

    .nav__link {
        display: block;
        padding: 0.8rem;
        font-size: 1.25rem;
        text-decoration: none;
        color: #333;
        transition: color 0.3s ease;
    }

    .nav__link:hover {
        color: #666;
    }

    /* Desktop (1024px y mayor) */
    @media (min-width: 1024px) {
        .header {
            padding: 1rem;
        }

        .logo {
            width: 100px;
        }

        .nav-toggle {
            display: none;
        }

        .nav {
            position: static;
            height: auto;
            width: auto;
            transform: none;
            background: transparent;
            padding: 0;
        }

        .nav__list {
            display: flex;
            gap: 2.5rem;
            align-items: center;
        }

        .nav__link {
            padding: 0;
            font-size: 1rem;
            position: relative;
            color: $color-white;
        }

        .nav__link::after {
            content: '';
            position: absolute;
            bottom: -4px;
            left: 0;
            width: 0;
            height: 2px;
            background: $color-white;
            transition: width 0.3s ease;
        }

        .nav__link:hover::after {
            width: 100%;
        }
    }

    .header.scrolled .nav__link {
        color: var(--color-text);

        &::after {
            background: var(--color-primary);
        }
    }
</style>

<script>
    // Control del menú hamburguesa
    const navToggle = document.querySelector('.nav-toggle');
    const nav = document.querySelector('.nav');
    const hamburger = document.querySelector('.hamburger');
    const header = document.querySelector('.header');

    navToggle?.addEventListener('click', () => {
        nav?.classList.toggle('active');
        hamburger?.classList.toggle('active');
    });

    // Control del scroll para el header
    let lastScrollTop = 0;
    
    window.addEventListener('scroll', () => {
        const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
        
        if (scrollTop > 50) {
            header?.classList.add('scrolled');
        } else {
            header?.classList.remove('scrolled');
        }
        
        lastScrollTop = scrollTop;
    });
</script>