---
import { Image } from 'astro:assets';
import banner from '../../assets/img/banner-web.jpg';

const name = "Gabriel Zavando";
const charge = "Full Stack Developer";
const subtitle = "Tu negocio tiene todo para crecer. La digitalización es el siguiente paso, y yo puedo ayudarte a darlo con soluciones pensadas para escalar, adaptarse y transformar tu presente en futuro.";
---

<section class="banner">
    <div class="banner__background">
        <Image 
            src={banner} 
            alt="Gabriel Zavando - Desarrollador Full Stack"
            width={1920}
            height={1080}
            class="banner__image"
        />
    </div>
    
    <div class="banner__container">
        <h1 class="banner__title">
            <span class="title-xl">{name}</span>
            <span class="title-md">{charge}</span>
        </h1>
        <p class="parrafo">
            {subtitle}
        </p>
        <div class="banner__actions">
            <a href="#contact" class="btn-cta__solid">
                Hablemos de tu proyecto
            </a>
            <a href="#services" class="btn-cta__border">
                Ver Servicios
            </a>
        </div>
    </div>
</section>

<style lang="scss">
    @use '../../styles/config' as *;

    .banner {
        // Contenedor base
        position: relative;
        min-height: 100vh;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        padding-top: var(--space-xl);
        // Asegurar que el banner esté por debajo del header
        isolation: isolate;

        // Fondo con imagen
        &__background {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: var(--z-background);
            // Fallback si la imagen no carga
            background: linear-gradient(
                135deg,
                var(--color-dark),
                var(--color-neutral)
            );
            
            .banner__image {
                width: 100%;
                height: 100%;
                object-fit: cover;
                filter: blur(2px);
                // Asegurar que la imagen se renderice
                opacity: 1;
                backface-visibility: hidden;
            }
        }

        // Capa degradada
        &::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(
                135deg,
                rgba(29, 0, 51, 0.8),
                rgba(47, 47, 47, 0.8)
            );
            z-index: var(--z-base);
        }

        // Contenido principal
        &__container {
            // Layout de contenedor
            width: 100%;
            max-width: #{container(max)};
            margin: 0 auto;
            padding: var(--space-md);
            
            // Flexbox
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            
            // Posicionamiento
            position: relative;
            z-index: var(--z-content);
            text-align: center;
            min-height: 60vh;
        }

        // Título
        &__title {
            margin-bottom: var(--space-md);
            line-height: 1.2;
            
            // Las clases title-xl y title-lg manejan toda la tipografía
            .title-xl {
                color: var(--color-white);
                display: block;
            }
            
            .title-md {
                color: var(--color-accent);
                display: block;
                margin-top: var(--space-xs);
            }
        }

        // Subtítulo
        & .parrafo {
            margin-bottom: var(--space-xl);
            max-width: 672px; // Limitar ancho para mejor legibilidad
            color: var(--color-white);
            font-size: 1.125rem;
            line-height: 1.6;
        }

        // Acciones
        &__actions {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: var(--space-lg);
            width: 100%;
            
            @media (min-width: #{container(narrow)}) {
                flex-direction: row;
            }
        }
    }
</style>

