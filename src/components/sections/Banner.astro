---
import { Image } from 'astro:assets';
import banner from '../../assets/img/banner-web.jpg';

const name = "Gabriel Zavando";
const charge = "Full Stack Developer";
const subtitle = "Tu negocio tiene todo para crecer. La digitalización es el siguiente paso, y yo puedo ayudarte a darlo con soluciones pensadas para escalar, adaptarse y transformar tu presente en futuro.";
---

<section class="banner">
    <div class="banner__background">
        <Image 
            src={banner} 
            alt="Gabriel Zavando - Desarrollador Full Stack"
            width={1920}
            height={1080}
            class="banner__image"
        />
    </div>
    
    <div class="banner__overlay"></div>
    
    <div class="banner__container">
        <h1 class="banner__title">
            <span class="banner__name">{name}</span>
            <span class="banner__charge">{charge}</span>
        </h1>
        <p class="banner__subtitle">
            {subtitle}
        </p>
        <div class="banner__actions">
            <a href="#contact" class="banner__cta">
                Hablemos de tu proyecto
                <span class="banner__cta-arrow">→</span>
            </a>
            <a href="#services" class="banner__cta banner__cta--secondary">
                Ver Servicios
            </a>
        </div>
    </div>
</section>

<style lang="scss">
    @use '../../styles/globals' as *;

    .banner {
        // Contenedor base
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        overflow: hidden;
        padding-top: $spacing-12;

        // Fondo con imagen
        &__background {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            
            .banner__image {
                width: 100%;
                height: 100%;
                object-fit: cover;
                filter: blur(2px);
            }
        }

        // Capa degradada con colores transparentes
        &::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(
                135deg,
                rgba($color-dark, 0.8),
                rgba($color-neutral, 0.8)
            );
            
            z-index: 1;
        }

        // Contenido principal
        &__container {
            @include container-flex($direction: column);
            position: relative;
            z-index: 2;
            padding: $spacing-6;
            text-align: center;
            padding-top: $spacing-6;
        }

        // Título
        &__title {
            font-family: var(--font-primary);
            font-weight: var(--weight-bold);
            color: $color-white;
            margin-bottom: $spacing-4;
            line-height: 1.2;
            
            @include responsive-font($heading-xs, $heading-sm, $heading-md);
        }

        // Nombre y cargo
        &__name {
            display: block;
            margin-bottom: $spacing-2;
        }

        &__charge {
            display: block;
            font-family: var(--font-secondary);
            font-weight: var(--weight-semibold);
            font-size: $heading-sm;
            color: $color-accent;
        }

        // Subtítulo
        &__subtitle {
            font-family: var(--font-secondary);
            color: $color-white;
            margin-bottom: $spacing-6;
            
            @include responsive-font($text-md, $text-lg, $text-xl);
        }

        // Acciones
        &__actions {
            display: flex;
            flex-direction: column;
            gap: $spacing-4;
            
            @media (min-width: $breakpoint-sm) {
                flex-direction: row;
            }
        }

        // Botones CTA
        &__cta {
            display: inline-flex;
            align-items: center;
            gap: $spacing-2;
            padding: $spacing-3 $spacing-4;
            font-weight: var(--weight-semibold);
            text-decoration: none;
            border-radius: $spacing-2;
            transition: all 0.3s ease;
            background: $gradient-primary;
            color: $color-white;
            
            &:hover {
                transform: translateY(-2px);
                box-shadow: $shadow-md;
            }
        }

        &__cta--secondary {
            background: transparent;
            border: 2px solid $color-accent;
            color: $color-accent;
            
            &:hover {
                background: $color-accent;
                color: $color-white;
                transform: translateY(-2px);
                box-shadow: $shadow-md;
            }
        }

        // Flecha CTA
        &__cta-arrow {
            font-size: $text-sm;
            transition: transform 0.3s ease;
            
            &:hover {
                transform: translateX(4px);
            }
        }
    }

</style>

